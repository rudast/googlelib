CC = gcc
CFLAGS = -fPIC -std=c11 -Wall -Werror -Wextra -lssl -lcrypto -O2 -g
LDFLAGS = -shared
RM = rm -f  # rm command
TARGET_LIB = googlelib-c.so

SRCS = google.c googleapi.c
OBJS = $(SRCS:.c=.o)

.PHONY: all
all: ${TARGET_LIB}

$(TARGET_LIB): $(OBJS)
	$(CC) ${LDFLAGS} -o $@ $^

$(SRCS:.c=.d):%.d:%.c
	$(CC) $(CFLAGS) -MM $< >$@

include $(SRCS:.c=.d)

.PHONY: clean
clean:
	-${RM} ${TARGET_LIB} ${OBJS} $(SRCS:.c=.d)
